<style>
    @import url(/stylesheets/admin-account.css);
</style>
<style>
    @import url(https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css);
</style>
<style>
    @import url(/stylesheets/bootstrap.min.css);
</style>
<style>
    @import url(https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css);
</style>

<script src="/javascripts/jquery-3.3.1.min.js"></script>
<script src="/javascripts/popper.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/jquery-3.3.1.slim.min.js"></script>

<div class="xp-breadcrumbbar text-center">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-curent="page" style="text-align: center;">Management Account
        </li>
    </ol>
</div>
<div class="main-content">
    <div class="row">
        <div class="col-md-12">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                            <h2 class="ml-lg-2">Manage Account</h2>
                        </div>
                        {{!-- <div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
                            <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal">
                                <i class="material-icons ri-file-add-fill">&#xE147;</i>
                                <span>Add New Account</span>
                            </a>
                            <a href="#deleteAccount" class="btn btn-danger" data-toggle="modal">
                                <i class="material-icons ri-delete-bin-2-fill"></i>
                                <span>Delete Account</span>
                            </a>
                        </div> --}}
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th><span class="custom-checkbox">
                                    <input type="checkbox" id="selectAll">
                                    <label for="selectAll"></label></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Access Level</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each userList}}
                        <tr>
                            <th><span class="custom-checkbox">
                                    <input type="checkbox" id="checkbox1" name="option[]" value="1">
                                    <label for="checkbox1"></label></th>
                            <th>{{this.username}}</th>
                            <th>{{this.email}}</th>
                            <th>{{this.address}}</th>
                            <th>{{this.phoneNumber}}</th>
                            <th>{{this.role}}</th>
                            <th>
                                {{!-- <a href="#editAccount" class="edit" data-toggle="modal">
                                    <i class="material-icons ri-pencil-fill" data-toggle="tooltip"
                                        data-id="{{this._id}}" title="Edit">&#xE254;</i>
                                </a> --}}
                                <a href="#editAccount" class="edit" data-toggle="modal"
                                    onclick="setEditUserId('{{this._id}}')">
                                    <i class="material-icons ri-pencil-fill" data-toggle="tooltip"
                                        data-target="#editAccount" title="Edit">&#xE254;</i>
                                </a>
                                <a href="/account/{{this._id}}" class="delete" data-toggle="modal">
                                    <i class="material-icons ri-delete-bin-2-fill" data-toggle="tooltip"
                                        title="Delete">&#xE872;</i>
                                </a>
                            </th>
                        </tr>
                        {{/each}}

                    </tbody>


                </table>

                <div class="pagination">
                    <a id="prev_page" href="/admin/account?page={{prevPage}}">
                        < </a>
                            {{#each pages}}
                            <a id="{{this}}" href="/admin/account?page={{this}}"
                                class="{{#if (eq this ../currentPage)}}active{{/if}}">{{this}}</a>
                            {{/each}}
                            <a id="next_page" href="/admin/account?page={{nextPage}}"> > </a>
                </div>
            </div>


            <!--add-modal start--->
            <div class="modal fade" tabindex="-1" id="addEmployeeModal" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add Employees</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="emil" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <textarea class="form-control" required></textarea>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-success">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <!----edit-modal end--------->
            <!----edit-modal start--------->
            <form class="modal fade" tabindex="-1" id="editAccount" role="dialog"
                action="/account/edit/{{this._id}}?_method=PUT" method="POST">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Employees</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="emil" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <textarea class="form-control" required></textarea>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </div>
                </div>
            </form>
            <form name="delete-course-form" method="POST"></form>
            <!----edit-modal end--------->
            <!----delete-modal start--------->
            <div class="modal fade" tabindex="-1" id="deleteAccount" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Employees</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure you want to delete this Records</p>
                            <p class="text-warning"><small>this action Cannot be Undone,</small></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-success">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--edit-modal end-->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="footer-in">
                        <p class="mb-0"></p>
                    </div>
                </div>
            </footer>



        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".xp-menubar").on('click', function () {
                $("#sidebar").toggleClass('active');
                $("#content").toggleClass('active');
            });

            $('.xp-menubar,.body-overlay').on('click', function () {
                $("#sidebar,.body-overlay").toggleClass('show-nav');
            });

        });

        document.addEventListener('DOMContentLoaded', function () {
            var courseId;
            var deleteForm = document.forms['delete-course-form'];
            var btnDeleteCourse = document.getElementById('btn btn-success');

            // When dialog confirm clicked
            $('#editAccount').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                courseId = button.data('id');
                console.log(courseId);
            });

            // When delete course btn clicked
            btnDeleteCourse.onclick = function () {
                deleteForm.action = 'admin/account/edit/' + courseId + '?_method=PUT';
                deleteForm.submit
            }
        });

    </script>