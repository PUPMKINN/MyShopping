    <script>
        const $ = document.querySelector.bind(document)
        const $$ = document.querySelectorAll.bind(document)

        let currentUrl = new URL(window.location.href);
        var parts = currentUrl.href.split('/');
        let number = parts[parts.length - 1];

        const contactTutor = $('#contact-tutor')

        contactTutor.addEventListener("click", async function (event) {
            event.preventDefault(); // Ngăn chặn hành vi gửi form tự động

            // Tạo đối tượng FormData từ form
            //const formData = new FormData();
            // formData.append('fullname', $('#your-name').value);
            //   formData.append('phoneNumber', $('#phone-number').value);
            //formData.append('email', $('email-address').value);
            // formData.append('desiredGPA', $('#desired-gpa').value);
            // formData.append('comment', $('#message').value);
            const formData = {
                'desiredGPA': $('#desired-gpa').value,
                'comment': $('#message').value,
            };

            let isError = false;

            try {
                const response = await fetch(`/user/contactToTutor/${number}`, {
                    method: 'POST',
                    body: JSON.stringify(formData), // Sử dụng FormData thay vì plain object
                    headers: {
                        'Content-type': 'application/json; charset=UTF-8',
                    },
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                }

                const data = await response.json();

                if (data.error) {
                    const alertError = document.querySelector('.alert-danger');
                    const errorMessages = data.errors.map(error => error.msg).join(', ');

                    // Display or handle the error messages
                    console.error('Error:', errorMessages);
                    alertError.innerHTML = `${errorMessages}`

                    alertError.style.opacity = "1";
                    alertError.style.display = "block";
                    setTimeout(function () {
                        alertError.style.opacity = "0";
                        setTimeout(function () {
                            alertError.style.display = "none";
                        }, 500);
                    }, 3000);
                } else {
                    // Xử lý phản hồi thành công ở đây
                    const alertReview = $('.alert-success')
                    alertReview.innerHTML = `${data.msg}`
                    alertReview.style.opacity = "1";
                    alertReview.style.display = "block"
                    console.log(alertReview)
                    console.log(data.msg)
                    setTimeout(function () {
                        alertReview.style.opacity = "0";
                        setTimeout(function () {
                            alertReview.style.display = "none";
                        }, 500);
                    }, 3000);

                }
            } catch (error) {
                console.error('Error:', error.message);
            }
        });


    </script>


