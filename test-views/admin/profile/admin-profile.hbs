<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Admin Profile</title>

    <!-- <link rel="stylesheet" href="/assets/styleIndex.css"> -->
    <link rel="stylesheet" href="./stylesheets/admin_profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="themify-icons.css"> -->
    <link href="https://fonts.googleapis.com/css?family=Muli:400,300" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

</head>

<body>
    <!-- Admin Profile -->
    <div class="container-fluid admin_profile_info">
        <div class="row">

            <div class="col-xl-4 col-lg-12 col-md-12 col-sm-12 gx-5">
                <div class="start_info">

                    <div class="start_info_frame">
                        <div class="cover_image">
                            <img src="./images/img-cover.svg" alt="Cover Image">
                        </div>
                        <div class="personal_circular_image">
                            <a href="./images/profile.png">
                                <img src="./images/profile.png" alt="Personal Image">
                            </a>
                        </div>
                        <div class="start_info_text">
                            <span class="start_info_name">
                                Trịnh Xuân Bách
                            </span>

                            <span class="start_info_nickname">@TrinhXBach</span>

                            <span class="start_info_slogan">
                                "I like shoes
                                <br>I want to travel the world
                                <br>I wanna bring my shop around the world"
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="start_info_des col-5 col-md-5 col-md-offset-1">
                            <h5>
                                12<br />
                                <small>Bought products</small>
                            </h5>
                        </div>
                        <div class="start_info_des col-2 col-md-2">
                            <h5>
                                4h<br />
                                <small>Time</small>
                            </h5>
                        </div>
                        <div class="start_info_des col-5 col-md-5">
                            <h5>
                                $100.00<br />
                                <small>Money</small>
                            </h5>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="header">
                        <h4 class="title">Team Members</h4>
                    </div>
                    <div class="card_content">
                        <ul class="list-unstyled team-members">
                            <li>
                                <div class="row">
                                    <div class="col-3 col-xs-3">
                                        <div class="personal_circular_image personal_circular_image--small">
                                            <a href="./images/profile.png">
                                                <img src="./images/profile.png" alt="Personal Image">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-6 col-xs-6">
                                        Trần Hoàng Duy
                                        <br />
                                        <span class="text-muted"><small>Offline</small></span>
                                    </div>
                                    <div class="col-3 col-xs-3 text-right">
                                        <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i>
                                        </btn>
                                    </div>
                                </div>
                            </li>
                            <li>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-xl-8 gx-5 info_description">
                <span>Edit profile</span>
                <form action="" method="post">
                    <div class="frame_info_2_column">
                        <div class="frame_info_column_1">
                            <div class="student_id">
                                <span class="label">Student ID</span>
                                <br>
                                <input type="text" class="input_info" value="21127011">
                            </div>
                            <div class="full_name">
                                <span class="label">Full name</span>
                                <br>
                                <input type="text" class="input_info" value="Trịnh Xuân Bách">
                            </div>
                            <div class="date_of_birth">
                                <span class="label">Date of birth</span>
                                <br>
                                <input type="text" class="input_info" value="08/07/2003">
                            </div>
                        </div>
                        <div class="frame_info_column_2">
                            <div class="email">
                                <span class="label">Email</span>
                                <br>
                                <input type="text" class="input_info" value="txbach21@clc.fitus.edu.vn">
                            </div>
                            <div class="phone_number">
                                <span class="label">Phone number</span>
                                <br>
                                <input type="text" class="input_info" value="0942607590">
                            </div>
                            <div class="country">
                                <span class="label">Country</span>
                                <br>
                                <input type="text" class="input_info" value="Vietnam">
                            </div>
                        </div>

                    </div>
                    <div class="address">
                        <span class="label">Address</span>
                        <br>
                        <input type="text" class="input_info" value="227 Nguyen Van Cu, District 5, Ho Chi Minh city">
                    </div>
                    <button type="file" class="my_button">Update Profile</button>

                </form>
            </div>

        </div>

    </div>


</body>

</html>