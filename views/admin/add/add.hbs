<style>
   @import url(/stylesheets/admin-add.css);
</style>
<style>
   @import url(https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css);
</style>
<div class="container">
   <div class="admin-product-form-container">
      <form action="" method="post" enctype="multipart/form-data">
         <h3>Add a new product</h3>
         <input type="text" placeholder="Enter product name" name="product_name" class="box">
         <input type="number" placeholder="Enter product price" name="product_price" class="box">
         <input type="number" placeholder="Enter product quantity" name="product_quantity" class="box">
         <input type="file" accept="image/png, image/jpeg, image/jpg" name="product_image" class="box">
         <input type="submit" class="btn" name="add_product" value="add product">
      </form>

   </div>
   <div class="product-display">
      <table class="product-display-table">
         <thead>
            <tr>
               <th>Product image</th>
               <th>Product name</th>
               <th>Product price</th>
               <th>Quantity</th>
               <th>Action</th>
            </tr>
         </thead>
         <tr>
            <td><img src="" height="100" alt=""></td>
            <td>
               <a href="./edit/edit.hbs" class="btn"> <i class="fas fa-edit"></i>
                  edit </a>
               <a href="./add/add.hbs" class="btn"> <i class="fas fa-trash"></i>
                  delete </a>
            </td>
         </tr>
      </table>
   </div>
</div>