<!-- reviews section starts  -->

<section class="reviews" id="reviews">

    <h1 class="heading"> What our's <span> Client Says</span> </h1>

    <div class="box-container">
        {{#each reviewList as |review|}}
        <div class="box">
            <div class="star">
                {{#each (starRating review.rating)}}
                <i class="fas fa-star"></i>
                {{/each}}
            </div>
            <div class="text">
                <i class="fas fa-quote-right"></i>
                <p>{{review.comment}}</p>
            </div>
            <div class="user">
                <img src="images/{{review.user.avatar}}" alt="">
                <h3>{{review.user.fullname}}</h3>
            </div>
        </div>
        {{/each}}


    </div>

</section>

